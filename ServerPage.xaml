<Page
    x:Class="MineModMapSelector.ServerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource PageBackgroundStyle}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Server-Mods" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Wähle Version:"/>
            <ComboBox x:Name="VersionComboBox" SelectionChanged="VersionComboBox_SelectionChanged" Width="200" Margin="0,10,0,10"/>
            <TextBlock Text="Quellpfad:"/>
            <TextBlock x:Name="SourcePathText" Width="300" Margin="0,10,0,10"/>
            <Button Content="Quelle ändern" Click="ChangeSourcePath" Width="200" Height="40" Margin="0,10,0,10"/>
            <TextBlock Text="Zielpfad:"/>
            <TextBlock x:Name="TargetPathText" Width="300" Margin="0,10,0,10"/>
            <Button Content="Ziel ändern" Click="ChangeTargetPath" Width="200" Height="40" Margin="0,10,0,10"/>
            <Button Content="Mods anwenden" Click="ApplyMods" Width="200" Height="40" Background="Green" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
